<ul class="list">
	<div class="small">
		<%= link_to image_tag(product.image.url,  :size => "260x180"), product.image.url, target: '_blank' %>
	</div>
	<div>
		<h4>ID:<%= product.ProductID  %></h4>
	</div>
	<div>
		<h4>Price:<%= product.price %></h4>
	</div>
	<div>
		<h4>Description:<%= product.description %></h4>
	</div>
	<div>
	<%= link_to "delete", product , method: :delete, data:{ confirm: "Are you sure?" } %>
</ul>
